<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/spacing_small"
    android:layout_marginEnd="@dimen/spacing_small">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:paddingStart="15dp"
        android:paddingEnd="8dp">
        <net.zoneland.x.bpm.mobile.v1.zoneXBPM.widgets.CircleImageView
            android:id="@+id/image_item_contact_fragment_body_collect_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_avatar_men"/>

        <TextView
            android:id="@+id/tv_item_contact_fragment_body_collect_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/spacing_small"
            android:layout_toEndOf="@id/image_item_contact_fragment_body_collect_icon"
            tools:text="@string/contact_list_name"
            android:textColor="@color/z_color_text_primary_dark"
            android:textSize="@dimen/font_normal" />

        <ImageView
            android:id="@+id/image_item_contact_fragment_body_collect_arrow"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/icon_arrow_22dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_item_contact_fragment_body_collect_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_tiny"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/image_item_contact_fragment_body_collect_arrow"
            tools:text="13666698003"
            android:textColor="@color/z_color_text_primary"
            android:textSize="13sp"
            android:visibility="visible"/>

    </RelativeLayout>
    <View
        android:id="@+id/view_item_contact_fragment_body_collect_bottom"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:visibility="gone"
        android:background="@drawable/background_white_bottom_radius"/>
</LinearLayout>