<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/spacing_small"
    android:layout_marginEnd="@dimen/spacing_small"
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:paddingStart="15dp"
        android:paddingEnd="8dp">
       <ImageView
           android:id="@+id/image_item_cloud_file_favorite_icon"
           android:layout_width="32dp"
           android:layout_height="32dp"
           android:src="@mipmap/cloud_file_favorite"
           android:layout_alignParentStart="true"
           android:layout_centerVertical="true"
           />

        <TextView
            android:id="@+id/tv_item_cloud_file_favorite_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_small"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/image_item_cloud_file_favorite_icon"
            tools:text="收藏的共享区"
            android:textColor="@color/z_color_text_primary_dark"
            android:textSize="@dimen/font_normal" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/icon_arrow_22dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
    <View
        android:id="@+id/view_item_cloud_file_favorite_bottom"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:visibility="gone"
        android:background="@drawable/background_white_bottom_radius"/>
</LinearLayout>